<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Activity themes -->

    <style name="Theme.Base" parent="android:Theme.Light" />

    <style name="Theme.Sample" parent="Theme.Base" />

    <style name="AppTheme" parent="Theme.Sample">
        <item name="android:colorEdgeEffect">@color/ripple_material_light</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Card" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="Widget.CardColorBox" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="Widget.CardItem" parent="Widget"/>

    <style name="Widget.CardItem.Title" parent="Widget">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/teal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.CardItem.Description" parent="Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

</resources>